<?xml version="1.0" encoding="UTF-8"?>
<threddsConfig>
  
  <serverInformation>
    <name>THREDDS Data Server</name>
    <logoUrl>/thredds/unidataLogo.jpg</logoUrl>
    <logoAltText>TDS</logoAltText>

    <abstract>Scientific Data</abstract>
    <keywords>meteorology, atmosphere, climate, ocean, earth science</keywords>
    
    <contact>
      <name>THREDDS Support</name>
      <organization>Unidata</organization>
      <email>support-thredds@unidata.ucar.edu</email>
      <!--phone></phone-->
    </contact>
    <hostInstitution>
      <name>Unidata</name>
      <webSite>http://www.unidata.ucar.edu/</webSite>
      <logoUrl>unidataIcon.gif</logoUrl>
      <logoAltText>Unidata</logoAltText>
    </hostInstitution>
  </serverInformation>

  <contentRoots>
    <contentRoot>motherlode</contentRoot>
    <contentRoot>idd</contentRoot>
  </contentRoots>

  <DataRoots>
    <idd>/data/ldm/pub</idd>
  </DataRoots>

  <catalogRoot>topcatalog.xml</catalogRoot>
  <catalogRoot>testCatalog.xml</catalogRoot>

  <catalogRoot>casestudies/catalog.xml</catalogRoot>
  <catalogRoot>casestudies/vgeeCatalog.xml</catalogRoot>
  <catalogRoot>casestudies/ccs034Catalog.xml</catalogRoot>
  <catalogRoot>casestudies/ccs039Catalog.xml</catalogRoot>
  <catalogRoot>casestudies/july18_2002cat.xml</catalogRoot>

  <catalogRoot>servers/radarCollections.xml</catalogRoot>

  <!--
   * Setup for generated HTML pages.
   *
   * NOTE: URLs may be absolute or relative, relative URLs must be relative
   * to the webapp URL, i.e., http://server:port/thredds/.
   * -->
  <htmlSetup>
    <!--
     * CSS documents used in generated HTML pages.
     * The CSS document given in the "catalogCssUrl" element is used for all pages
     * that are HTML catalog views. The CSS document given in the "standardCssUrl"
     * element is used in all other generated HTML pages.
     * -->
    <standardCssUrl>tds.css</standardCssUrl>
    <catalogCssUrl>tdsCat.css</catalogCssUrl>
    <openDapCssUrl>tdsDap.css</openDapCssUrl>
  </htmlSetup>

  <CatalogServices>
    <allowRemote>true</allowRemote>
  </CatalogServices>

  <NetcdfFileCache>
    <minFiles>50</minFiles>
    <maxFiles>100</maxFiles>
    <scour>5 min</scour>
  </NetcdfFileCache>
  <GribCollection>
    <minFiles>5</minFiles>
    <maxFiles>10</maxFiles>
    <scour>5 min</scour>
  </GribCollection>
  <TimePartition>
    <minFiles>5</minFiles>
    <maxFiles>10</maxFiles>
    <scour>5 min</scour>
  </TimePartition>

  <HTTPFileCache>
    <minFiles>5</minFiles>
    <maxFiles>20</maxFiles>
    <scour>10 min</scour>
  </HTTPFileCache>

  <NetcdfSubsetService>
    <allow>true</allow>
    <scour>15 min</scour>
    <maxAge>30 min</maxAge>
    <!--maxFileDownloadSize>52428800</maxFileDownloadSize-->
  </NetcdfSubsetService>

  <WCS>
    <allow>true</allow>
    <allowRemote>false</allowRemote>
    <scour>15 min</scour>
    <maxAge>30 min</maxAge>
  </WCS>

  <WMS>
    <allow>true</allow>
    <allowRemote>false</allowRemote>
    <allowFeatureInfo>true</allowFeatureInfo>
    <maxImageWidth>5000</maxImageWidth>
    <maxImageHeight>5000</maxImageHeight>
  </WMS>

  <NCISO>
    <ncmlAllow>true</ncmlAllow>
    <uddcAllow>true</uddcAllow>
    <isoAllow>true</isoAllow>
  </NCISO>

  <!-- Enable CatalogGen service.
   -->
  <CatalogGen>
    <allow>true</allow>
  </CatalogGen>

  <!-- Enable DLwriter service but disable on remote catalogs.
       -->
  <DLwriter>
    <allow>true</allow>
    <allowRemote>false</allowRemote>
  </DLwriter>

  <!-- Enable DqcService.
   -->
  <DqcService>
    <allow>true</allow>
  </DqcService>

  <!-- added 11/13/2012 jcaron -->
  <Netcdf4Clibrary>
    <libraryPath> /opt/netcdf/netcdf-4.2.1.1/usr/lib</libraryPath>
    <libraryName>netcdf</libraryName>
  </Netcdf4Clibrary>

  <!-- nj22Config
    <ioServiceProvider class="edu.univ.ny.stuff.FooFiles"/>
    <coordSysBuilder convention="foo" class="test.Foo"/>
    <coordTransBuilder name="atmos_ln_sigma_coordinates" type="vertical" class="my.stuff.atmosSigmaLog"/>
    <typedDatasetFactory datatype="Point" class="gov.noaa.obscure.file.Flabulate"/>
  </nj22Config -->

  <DiskCache>
    <alwaysUse>false</alwaysUse>
    <scour>1 hour</scour>
    <maxSize>1 Gb</maxSize>
  </DiskCache>

    <!--
    GRIB index caching
    <GribIndex>
      <alwaysUse>false</alwaysUse>
      <dir>/tomcat_home/content/thredds/cache/grib/</dir>
      <policy>oneDirectory</policy>
      <scour>0 hours</scour>
      <maxAge>90 days</maxAge>
    </GribIndex>
    -->

    <AggregationCache>
    <scour>24 hours</scour>
    <maxAge>90 days</maxAge>
  </AggregationCache>

  <GribCollection>
    <scour>24 hours</scour>
    <maxAge>90 days</maxAge>
  </GribCollection>


</threddsConfig>
