<?xml version='1.0' encoding='UTF-8'?>
<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.unidata.ucar.edu/namespaces/thredds/InvCatalog/v1.0"
         name="GEWEX Atmospheric System Study (GASS)"
         xsi:schemaLocation="http://www.unidata.ucar.edu/namespaces/thredds/InvCatalog/v1.0 http://www.unidata.ucar.edu/schemas/thredds/InvCatalog.1.0.2.xsd">

    <service base="" name="fileservice" serviceType="Compound">
        <service base="/thredds/fileServer/" desc="HTTPServer" name="HTTPServer" serviceType="HTTPServer">
            <property name="requires_authorization" value="true"/>
            <property name="application" value="Web Browser"/>
            <property name="application" value="Web Script"/>
        </service>
        <service base="gsiftp://esgf-dev.jpl.nasa.gov:2811/" desc="GridFTP" name="GRIDFTP" serviceType="GridFTP">
            <property name="requires_authorization" value="true"/>
            <property name="application" value="DataMover-Lite"/>
        </service>
        <service base="/thredds/dodsC/" desc="OpenDAP" name="OpenDAPServer" serviceType="OpenDAP">
            <property name="requires_authorization" value="false"/>
            <property name="application" value="Web Browser"/>
        </service>
    </service>

    <datasetScan name="GASS-YOTC-MIP data" ID="gass-ytoc-mip" path="gass-ytoc-mip" location="${cdmUnitTest}/formats/netcdf3" addLatest="true">
        <serviceName>fileservice</serviceName>
        <filter>
            <include wildcard="*.nc" />
        </filter>
        <sort>
            <lexigraphicByName increasing="true" />
        </sort>
    </datasetScan>

    <datasetScan name="Test Scan Local Html" path="scanLocalHtml" location="content/testdata/">
        <metadata inherited="true">
            <serviceName>HTTPServer</serviceName>
        </metadata>
    </datasetScan>


</catalog>