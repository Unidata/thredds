<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <appender name="fileLogger" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="./tdm.log"/>
    <param name="DatePattern" value=".yyyy-MM-dd"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS Z} %-5p - %c - %m%n"/>
    </layout>
  </appender>

  <appender name="consoleLogger" class="org.apache.log4j.ConsoleAppender">
    <param name="ImmediateFlush" value="true"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS Z} %-5p - %c - %m%n"/>
    </layout>
  </appender>

  <!-- debug-->

  <!-- logger name="thredds.inventory" additivity="false">
    <level value="DEBUG"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger -->

  <logger name="thredds.tdm" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger>

  <logger name="ucar.nc2.grib" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger>

  <logger name="thredds.inventory" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger>

  <logger name="thredds.catalog.InvDatasetFeatureCollection" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger>

  <logger name="thredds.catalog.InvDatasetFcGrib" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </logger>

  <root>
    <level value="WARN"/>
    <appender-ref ref="consoleLogger"/>
    <appender-ref ref="fileLogger" />
  </root>

</log4j:configuration>